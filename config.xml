<?xml version='1.0' encoding='utf-8'?>
<widget id="br.com.ecomax" version="1.0.3" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Ecomax</name>
    <description>
        Aplicativo da Ecomax.
    </description>
    <author email="joao@velty.com.br" href="https://www.velty.com.br/">
        Velty
    </author>
    <content src="index.html" />
    <allow-navigation href="*" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
        <preference name="android-minSdkVersion" value="19" />
        <preference name="android-targetSdkVersion" value="26" />
        <preference name="Orientation" value="portrait" />
        <preference name="StatusBarBackgroundColor" value="#f7f7f8" />
        <preference name="StatusBarStyle" value="lightcontent" />
        <preference name="StatusBarOverlaysWebView" value="false" />
        <icon density="ldpi" src="res/icons/android/ICON_APP_ECOMAX_36X36.png" />
        <icon density="mdpi" src="res/icons/android/ICON_APP_ECOMAX_48X48.png" />
        <icon density="hdpi" src="res/icons/android/ICON_APP_ECOMAX_72X72.png" />
        <icon density="xhdpi" src="res/icons/android/ICON_APP_ECOMAX_96X96.png" />
    </platform>
    <platform name="ios">
        <preference name="Orientation" value="portrait" />
        <preference name="StatusBarBackgroundColor" value="#f7f7f8" />
        <preference name="StatusBarStyle" value="blackopaque" />
        <preference name="StatusBarOverlaysWebView" value="true" />
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
        <icon src="res/ios/ICON_APP_ECOMAX_36X36.png" width="36" height="36" />
        <icon src="res/ios/icon-36.png" width="36" height="36" />
        <icon src="res/icon/ios/icon-120.png" gap:platform="ios" width="120" height="120" />
        <icon src="res/icon/ios/icon-76.png" gap:platform="ios" width="76" height="76" />
        <icon src="res/icon/ios/icon-40.png" gap:platform="ios" width="40" height="40" />
        <icon src="res/icon/ios/icon-152.png" gap:platform="ios" width="152" height="152" />
        <!-- iOS 8.0+ -->
        <!-- iPhone 6 Plus  -->
        <icon src="res/ios/icon-60@3x.png" width="180" height="180" />
        <!-- iOS 7.0+ -->
        <!-- iPhone / iPod Touch  -->
        <icon src="res/ios/icon-20@3x.png" width="60" height="60" />
        <icon src="res/ios/icon-60@2x.png" width="120" height="120" />
        <!-- iPad -->
        <icon src="res/ios/icon-76.png" width="76" height="76" />
        <icon src="res/ios/icon-76@2x.png" width="152" height="152" />
        <!-- Spotlight Icon -->
        <icon src="res/ios/icon-40.png" width="40" height="40" />
        <icon src="res/ios/icon-40@2x.png" width="80" height="80" />
        <!-- iOS 6.1 -->
        <!-- iPhone / iPod Touch -->
        <icon src="res/ios/ICON_APP_ECOMAX_57X57.png" width="57" height="57" />
        <icon src="res/ios/icon@2x.png" width="114" height="114" />
        <!-- iPad -->
        <icon src="res/ios/icon-72.png" width="72" height="72" />
        <icon src="res/ios/ICON_APP_ECOMAX_144X144.png" width="144" height="144" />
        <!-- iPad Pro -->
        <icon src="res/ios/icon-83.5@2x.png" width="167" height="167" />
        <!-- iPhone Spotlight and Settings Icon -->
        <icon src="res/ios/icon-29.png" width="29" height="29" />
        <icon src="res/ios/icon-29@2x.png" width="58" height="58" />
        <icon src="res/ios/icon-29@3x.png" width="87" height="87" />
        <!-- iPad Spotlight and Settings Icon -->
        <icon src="res/ios/icon-50.png" width="50" height="50" />
        <icon src="res/ios/icon-50@2x.png" width="100" height="100" />
        <!-- iPad Pro -->
        <icon src="res/ios/icon-83.5@2x.png" width="167" height="167" />
    </platform>
    <plugin name="cordova-plugin-whitelist" spec="^1.3.3" />
</widget>
