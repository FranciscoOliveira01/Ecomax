<?xml version='1.0' encoding='utf-8'?>
<widget id="br.com.ecomaxempreendimentos" version="1.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Ecomax</name>
    <description>
        Aplicativo da Ecomax.
    </description>
    <author email="joao@velty.com.br" href="https://www.velty.com.br/">
        Velty
    </author>
    <content src="index.html" />
    <allow-navigation href="*" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
        <preference name="android-minSdkVersion" value="19" />
        <preference name="android-targetSdkVersion" value="26" />
        <preference name="Orientation" value="portrait" />
        <preference name="StatusBarBackgroundColor" value="#f7f7f8" />
        <preference name="StatusBarStyle" value="lightcontent" />
        <preference name="StatusBarOverlaysWebView" value="false" />
        <icon density="ldpi" src="res/icons/android/ICON_APP_ECOMAX_36X36.png" />
        <icon density="mdpi" src="res/icons/android/ICON_APP_ECOMAX_48X48.png" />
        <icon density="hdpi" src="res/icons/android/ICON_APP_ECOMAX_72X72.png" />
        <icon density="xhdpi" src="res/icons/android/ICON_APP_ECOMAX_96X96.png" />
    </platform>
    <platform name="ios">
        <preference name="Orientation" value="portrait" />
        <preference name="StatusBarBackgroundColor" value="#f7f7f8" />
        <preference name="StatusBarStyle" value="blackopaque" />
        <preference name="StatusBarOverlaysWebView" value="true" />
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
            <!-- iOS 7.0+ -->
            <!-- iPhone / iPod Touch  -->
            <icon src="res/icon/ios/icon-120.png" width="120" height="120" />
            <icon src="res/icon/ios/icon-40.png"  width="40" height="40" />
            <icon src="res/icon/ios/icon-36.png" width="36" height="36" />

            <!-- iPad -->
             <icon src="res/icon/ios/icon-76.png"  width="76" height="76" />
            <icon src="res/icon/ios/icon-152.png"  width="152" height="152" />

    </platform>
    <plugin name="cordova-plugin-whitelist" spec="^1.3.3" />
     <plugin name="cordova-plugin-inappbrowser" spec="^3.0.0" />
</widget>
