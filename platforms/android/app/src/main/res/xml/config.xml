<?xml version='1.0' encoding='utf-8'?>
<widget id="br.com.ecomaxempreendimentos" version="1.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <feature name="Whitelist">
        <param name="android-package" value="org.apache.cordova.whitelist.WhitelistPlugin" />
        <param name="onload" value="true" />
    </feature>
    <feature name="InAppBrowser">
        <param name="android-package" value="org.apache.cordova.inappbrowser.InAppBrowser" />
    </feature>
    <name>Ecomax</name>
    <description>
        Aplicativo da Ecomax.
    </description>
    <author email="joao@velty.com.br" href="https://www.velty.com.br/">
        Velty
    </author>
    <content src="index.html" />
    <allow-navigation href="*" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <allow-intent href="market:*" />
    <icon density="ldpi" src="res/icons/android/ICON_APP_ECOMAX_36X36.png" />
    <icon density="mdpi" src="res/icons/android/ICON_APP_ECOMAX_48X48.png" />
    <icon density="hdpi" src="res/icons/android/ICON_APP_ECOMAX_72X72.png" />
    <icon density="xhdpi" src="res/icons/android/ICON_APP_ECOMAX_96X96.png" />
    <preference name="loglevel" value="DEBUG" />
    <preference name="android-minSdkVersion" value="19" />
    <preference name="android-targetSdkVersion" value="26" />
    <preference name="Orientation" value="portrait" />
    <preference name="StatusBarBackgroundColor" value="#f7f7f8" />
    <preference name="StatusBarStyle" value="lightcontent" />
    <preference name="StatusBarOverlaysWebView" value="false" />
</widget>
